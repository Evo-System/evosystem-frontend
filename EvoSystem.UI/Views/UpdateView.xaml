<UserControl x:Class="EvoSystem.UI.Views.UpdateView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Name="RootUpdateView">
    
    <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="0,0,10,0">
        <StackPanel>
            
            <Border Background="#1a1c2a" CornerRadius="12" Padding="25" Margin="0,0,20,30" BorderThickness="1" BorderBrush="#33ffffff">
                <DockPanel LastChildFill="False">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock x:Name="TxtFoundPrefix" Text="Encontramos " Foreground="#e0e0e0" FontSize="16"/>
                        <TextBlock x:Name="TxtCount" Text="0" Foreground="#007bff" FontWeight="Bold" FontSize="20" Margin="5,0"/>
                        <TextBlock x:Name="TxtFoundSuffix" Text="drivers instalados." Foreground="#e0e0e0" FontSize="16"/>
                    </StackPanel>
                    <Button x:Name="BtnUpdateAll" Content="Atualizar Todos" DockPanel.Dock="Right" Style="{StaticResource BtnModerno}" Width="150" Height="40"/>
                </DockPanel>
            </Border>

            <ItemsControl x:Name="ListaDrivers">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Background="#25283d" CornerRadius="10" Margin="0,0,20,15" Padding="20" BorderThickness="1" BorderBrush="#1affffff">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/> <ColumnDefinition Width="*"/>    <ColumnDefinition Width="Auto"/> 
                                </Grid.ColumnDefinitions>

                                <Border Grid.Column="0" Width="50" Height="50" CornerRadius="8" BorderThickness="1" BorderBrush="#007bff" Margin="0,0,20,0">
                                    <TextBlock Text="Drivers" Foreground="#007bff" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="10"/>
                                </Border>

                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                    <TextBlock Text="{Binding DeviceName}" Foreground="White" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,5"/>
                                    <StackPanel Orientation="Horizontal">
                                        
                                        <TextBlock Text="{Binding ElementName=RootUpdateView, Path=TxtFabricante}" Foreground="#8c8f9e"/>
                                        
                                        <TextBlock Text="{Binding Manufacturer}" Foreground="#00ff88" FontWeight="Bold" Margin="0,0,15,0"/>
                                        
                                        <TextBlock Text="{Binding ElementName=RootUpdateView, Path=TxtVersao}" Foreground="#8c8f9e"/>
                                        
                                        <TextBlock Text="{Binding DriverVersion}" Foreground="White"/>
                                    </StackPanel>
                                </StackPanel>

                                <Button Grid.Column="2" 
                                        Content="{Binding ElementName=RootUpdateView, Path=TxtBtnUpdate}" 
                                        Width="100" Height="35" FontSize="12">
                                    <Button.Style>
                                        <Style TargetType="Button">
                                            <Setter Property="Background" Value="#00b361"/>
                                            <Setter Property="Foreground" Value="White"/>
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="Button">
                                                        <Border Background="{TemplateBinding Background}" CornerRadius="6">
                                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                        </Border>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>
                                    </Button.Style>
                                </Button>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
            
        </StackPanel>
    </ScrollViewer>
</UserControl>