<UserControl x:Class="EvoSystem.UI.Views.OptionsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="800">

    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="0,0,10,0">
            <StackPanel>

                <Border Background="#1a1c2a" CornerRadius="12" Padding="25" Margin="0,0,20,30" BorderThickness="1" BorderBrush="#33ffffff">
                    <StackPanel>
                        <TextBlock x:Name="TxtGeral" Text="Geral" FontSize="20" FontWeight="SemiBold" Foreground="White" Margin="0,0,0,20"/>

                        <CheckBox x:Name="ChkStartup" Content="Iniciar Evo-System com o Windows" 
                                  Foreground="#e0e0e0" FontSize="14" Margin="0,0,0,15" Cursor="Hand">
                            <CheckBox.LayoutTransform>
                                <ScaleTransform ScaleX="1.2" ScaleY="1.2"/>
                            </CheckBox.LayoutTransform>
                        </CheckBox>

                        <CheckBox x:Name="ChkMinimize" Content="Minimizar para a bandeja ao fechar" 
                                  IsChecked="True"
                                  Foreground="#e0e0e0" FontSize="14" Margin="0,0,0,25" Cursor="Hand">
                            <CheckBox.LayoutTransform>
                                <ScaleTransform ScaleX="1.2" ScaleY="1.2"/>
                            </CheckBox.LayoutTransform>
                        </CheckBox>

                        <TextBlock x:Name="TxtIdioma" Text="Idioma" Foreground="#8c8f9e" Margin="0,0,0,8"/>
                        <ComboBox x:Name="CmbLanguage" Width="250" Height="35" HorizontalAlignment="Left" FontSize="14" Padding="10,5">
                            <ComboBoxItem Content="Português (Brasil)" IsSelected="True"/>
                            <ComboBoxItem Content="English (US)"/>
                        </ComboBox>
                    </StackPanel>
                </Border>

                <Border Background="#1a1c2a" CornerRadius="12" Padding="25" Margin="0,0,20,30" BorderThickness="1" BorderBrush="#33ffffff">
                    <StackPanel>
                        <TextBlock x:Name="TxtVerificacao" Text="Verificação" FontSize="20" FontWeight="SemiBold" Foreground="White" Margin="0,0,0,20"/>

                        <CheckBox x:Name="ChkAutoCheck" Content="Verificar drivers automaticamente" 
                                  IsChecked="True"
                                  Foreground="#e0e0e0" FontSize="14" Margin="0,0,0,25" Cursor="Hand">
                            <CheckBox.LayoutTransform>
                                <ScaleTransform ScaleX="1.2" ScaleY="1.2"/>
                            </CheckBox.LayoutTransform>
                        </CheckBox>

                        <TextBlock x:Name="TxtFrequencia" Text="Frequência" Foreground="#8c8f9e" Margin="0,0,0,8"/>
                        <ComboBox x:Name="CmbFrequency" Width="250" Height="35" HorizontalAlignment="Left" FontSize="14" Padding="10,5">
                            <ComboBoxItem Content="Diariamente" IsSelected="True"/>
                            <ComboBoxItem Content="Semanalmente"/>
                            <ComboBoxItem Content="Mensalmente"/>
                        </ComboBox>
                    </StackPanel>
                </Border>

                <Button x:Name="BtnSalvar" Content="Salvar Alterações" Style="{StaticResource BtnModerno}" 
                        Width="200" HorizontalAlignment="Left" Click="BtnSalvar_Click"/>

            </StackPanel>
        </ScrollViewer>

        <Border x:Name="ToastNotification" 
                Background="#25283d" 
                BorderBrush="#00ff88" 
                BorderThickness="1" 
                CornerRadius="10" 
                HorizontalAlignment="Center" 
                VerticalAlignment="Bottom" 
                Margin="0,0,0,50" 
                Padding="20,15"
                Opacity="0" 
                IsHitTestVisible="False">
            
            <Border.Effect>
                <DropShadowEffect Color="Black" BlurRadius="20" ShadowDepth="5" Opacity="0.5"/>
            </Border.Effect>
            
            <Border.RenderTransform>
                <TranslateTransform x:Name="ToastTransform" Y="20"/>
            </Border.RenderTransform>

            <StackPanel Orientation="Horizontal">
                <TextBlock Text="✅" FontSize="18" Margin="0,0,10,0" VerticalAlignment="Center"/>
                <TextBlock x:Name="TxtToastMsg" Text="Configurações salvas com sucesso!" 
                           FontSize="14" 
                           FontWeight="SemiBold" 
                           Foreground="White" 
                           VerticalAlignment="Center"/>
            </StackPanel>
        </Border>

    </Grid>
</UserControl>