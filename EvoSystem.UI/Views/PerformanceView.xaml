<UserControl x:Class="EvoSystem.UI.Views.PerformanceView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="0,0,20,0">
            
            <TextBlock x:Name="TitlePage" Text="Painel de Ferramentas" FontSize="18" Foreground="#e0e0e0" Margin="0,0,0,20"/>

            <WrapPanel>
                
                <Border Style="{StaticResource CardStyle}" Width="300" Height="210">
                    <StackPanel>
                        <TextBlock x:Name="TitleClean" Text="Limpeza Rápida" FontSize="18" FontWeight="Bold" Foreground="White" Margin="0,0,0,10"/>
                        <TextBlock x:Name="DescClean" Text="Remove arquivos temporários e cache do sistema para liberar espaço." 
                                   Foreground="#8c8f9e" TextWrapping="Wrap" Height="50"/>
                        
                        <Button x:Name="BtnClean" Content="Executar Limpeza" Style="{StaticResource BtnModerno}" 
                                Background="#3d52fc" Height="40" Margin="0,10,0,0"
                                Click="BtnLimpeza_Click"/>
                        
                        <TextBlock x:Name="StatusClean" Text="Ativado" Foreground="#00ff88" FontWeight="Bold" Margin="0,15,0,0" HorizontalAlignment="Right"/>
                    </StackPanel>
                </Border>

                <Border Style="{StaticResource CardStyle}" Width="300" Height="210">
                    <StackPanel>
                        <TextBlock x:Name="TitleStartup" Text="Inicialização" FontSize="18" FontWeight="Bold" Foreground="White" Margin="0,0,0,10"/>
                        <TextBlock x:Name="DescStartup" Text="Gerencie aplicativos que iniciam junto com o Windows."
                                   Foreground="#8c8f9e" TextWrapping="Wrap" Height="50"/>
                        
                        <Button x:Name="BtnStartup" Content="Ver Apps" Style="{StaticResource BtnModerno}" 
                                Background="#2a2d45" BorderBrush="#33ffffff" BorderThickness="1" Height="40" Margin="0,10,0,0"
                                Click="BtnStartup_Click"/>
                        
                        <TextBlock x:Name="StatusStartup" Text="Ativado" Foreground="#00ff88" FontWeight="Bold" Margin="0,15,0,0" HorizontalAlignment="Right"/>
                    </StackPanel>
                </Border>

                <Border Style="{StaticResource CardStyle}" Width="300" Height="210">
                    <StackPanel>
                        <TextBlock x:Name="TitleWinget" Text="Atualizar Apps" FontSize="18" FontWeight="Bold" Foreground="White" Margin="0,0,0,10"/>
                        <TextBlock x:Name="DescWinget" Text="Busca atualizações para programas instalados (via Winget)."
                                   Foreground="#8c8f9e" TextWrapping="Wrap" Height="50"/>
                        
                        <Button x:Name="BtnWinget" Content="Procurar Atualizações" Style="{StaticResource BtnModerno}" 
                                Background="#007bff" Height="40" Margin="0,10,0,0"
                                Click="BtnWinget_Click"/>
                        
                        <TextBlock x:Name="StatusWinget" Text="Ativado" Foreground="#00ff88" FontWeight="Bold" Margin="0,15,0,0" HorizontalAlignment="Right"/>
                    </StackPanel>
                </Border>

                <Border Style="{StaticResource CardStyle}" Width="300" Height="210">
                    <StackPanel>
                        <TextBlock x:Name="TitleLargeFiles" Text="Arquivos Grandes" FontSize="18" FontWeight="Bold" Foreground="White" Margin="0,0,0,10"/>
                        <TextBlock x:Name="DescLargeFiles" Text="Encontre arquivos maiores que 100 MB nas suas pastas."
                                   Foreground="#8c8f9e" TextWrapping="Wrap" Height="50"/>
                        
                        <Button x:Name="BtnLargeFiles" Content="Pesquisar" Height="40" Margin="0,10,0,0"
                                Style="{StaticResource BtnModerno}" 
                                Background="#9e00e0"
                                Click="BtnLargeFiles_Click"/>
                        
                        <TextBlock x:Name="StatusLargeFiles" Text="Ativado" Foreground="#00ff88" FontWeight="Bold" Margin="0,15,0,0" HorizontalAlignment="Right"/>
                    </StackPanel>
                </Border>

            </WrapPanel>
        </StackPanel>
    </ScrollViewer>
</UserControl>