<Window x:Class="EvoSystem.UI.Views.WingetWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Atualizações" Height="600" Width="950"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None" AllowsTransparency="True" Background="Transparent">

    <Border Background="#10121a" CornerRadius="15" BorderThickness="1" BorderBrush="#33ffffff">
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/> <RowDefinition Height="Auto"/> <RowDefinition Height="*"/> <RowDefinition Height="Auto"/> 
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Margin="0,0,0,20">
                <TextBlock x:Name="TitleText" Text="Atualizações Disponíveis" FontSize="24" FontWeight="Bold" Foreground="White"/>
                <StackPanel Orientation="Horizontal">
                    <TextBlock x:Name="SubtitleText" Text="Gerenciado por Winget" Foreground="#8c8f9e" FontSize="14" Margin="0,5,10,0"/>
                    <TextBlock x:Name="TxtStatus" Text="Verificando..." Foreground="#007bff" FontSize="14" Margin="0,5,0,0" FontWeight="SemiBold"/>
                </StackPanel>
            </StackPanel>

            <Border Grid.Row="1" Background="#1a1c2a" CornerRadius="8,8,0,0" Padding="15,10" Margin="0,0,5,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="3*"/> <ColumnDefinition Width="1.5*"/> <ColumnDefinition Width="Auto"/> <ColumnDefinition Width="1.5*"/> <ColumnDefinition Width="80"/> 
                    </Grid.ColumnDefinitions>

                    <TextBlock x:Name="HdrName" Grid.Column="0" Text="NOME DO APLICATIVO" Foreground="#8c8f9e" FontWeight="Bold" FontSize="12"/>
                    <TextBlock x:Name="HdrCurrent" Grid.Column="1" Text="VERSÃO ATUAL" Foreground="#8c8f9e" FontWeight="Bold" FontSize="12" HorizontalAlignment="Center"/>
                    <TextBlock x:Name="HdrNew" Grid.Column="3" Text="NOVA VERSÃO" Foreground="#00ff88" FontWeight="Bold" FontSize="12" HorizontalAlignment="Center"/>
                    <TextBlock x:Name="HdrAction" Grid.Column="4" Text="AÇÃO" Foreground="#8c8f9e" FontWeight="Bold" FontSize="12" HorizontalAlignment="Center"/>
                </Grid>
            </Border>

            <ListBox x:Name="ListApps" Grid.Row="2" Background="Transparent" BorderThickness="0" ScrollViewer.HorizontalScrollBarVisibility="Disabled" Padding="0">
                <ListBox.ItemContainerStyle>
                    <Style TargetType="ListBoxItem">
                        <Setter Property="Padding" Value="0"/>
                        <Setter Property="Margin" Value="0,0,5,5"/>
                        <Setter Property="Background" Value="Transparent"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="ListBoxItem">
                                    <Border x:Name="BorderItem" Background="#25283d" Padding="15" BorderThickness="0,0,0,1" BorderBrush="#33ffffff">
                                        <ContentPresenter/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="BorderItem" Property="Background" Value="#2d314d"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </ListBox.ItemContainerStyle>
                
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="3*"/> <ColumnDefinition Width="1.5*"/> <ColumnDefinition Width="Auto"/> <ColumnDefinition Width="1.5*"/> <ColumnDefinition Width="80"/> 
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0" Text="{Binding Name}" Foreground="White" FontSize="15" FontWeight="SemiBold" VerticalAlignment="Center" TextTrimming="CharacterEllipsis"/>
                            <TextBlock Grid.Column="1" Text="{Binding CurrentVersion}" Foreground="#a0a0a0" FontSize="14" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            <TextBlock Grid.Column="2" Text="➜" Foreground="#555" FontSize="12" Margin="10,0" VerticalAlignment="Center"/>
                            <TextBlock Grid.Column="3" Text="{Binding NewVersion}" Foreground="#00ff88" FontWeight="Bold" FontSize="14" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            <Border Grid.Column="4" Background="#3300ff88" CornerRadius="5" Width="30" Height="30" HorizontalAlignment="Center">
                                <TextBlock Text="⬇" Foreground="#00ff88" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </Grid>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>

            <Button x:Name="BtnClose" Grid.Row="3" Content="Fechar" Width="150" Height="45" HorizontalAlignment="Right" Margin="0,20,0,0" Click="BtnFechar_Click">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Background" Value="#ff4d4d"/>
                        <Setter Property="Foreground" Value="White"/>
                        <Setter Property="FontSize" Value="14"/>
                        <Setter Property="FontWeight" Value="SemiBold"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" CornerRadius="8">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Button.Style>
            </Button>
        </Grid>
    </Border>
</Window>