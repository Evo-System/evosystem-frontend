<Window x:Class="EvoSystem.UI.Views.CleanupWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Limpeza do Sistema" Height="450" Width="700"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None" AllowsTransparency="True" Background="Transparent">

    <Border Background="#10121a" CornerRadius="15" BorderThickness="1" BorderBrush="#3d52fc">
        <Border.Effect>
            <DropShadowEffect Color="#000" BlurRadius="20" ShadowDepth="5" Opacity="0.5"/>
        </Border.Effect>

        <Grid Margin="25">
            
            <Grid x:Name="GridPreview" Visibility="Visible">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <StackPanel>
                    <TextBlock x:Name="TitleText" Text="Limpeza de Disco" FontSize="22" FontWeight="Bold" Foreground="White"/>
                    <TextBlock x:Name="DescText" Text="Verifique os arquivos que serÃ£o removidos." Foreground="#8c8f9e" Margin="0,5,0,20"/>
                </StackPanel>

                <DataGrid Grid.Row="1" x:Name="GridItems" AutoGenerateColumns="False"
                          Background="Transparent" RowBackground="Transparent" Foreground="White"
                          BorderThickness="0" GridLinesVisibility="Horizontal" HeadersVisibility="None"
                          CanUserAddRows="False" IsReadOnly="True" HorizontalScrollBarVisibility="Disabled">
                    <DataGrid.RowStyle>
                        <Style TargetType="DataGridRow">
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="Margin" Value="0,0,0,10"/>
                            <Setter Property="BorderThickness" Value="0"/>
                        </Style>
                    </DataGrid.RowStyle>
                    <DataGrid.Columns>
                        <DataGridTemplateColumn Width="50">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="ðŸ—‘ï¸" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        
                        <DataGridTextColumn Binding="{Binding Name}" Width="*" FontSize="16" FontWeight="SemiBold">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                    <Setter Property="Foreground" Value="White"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>

                        <DataGridTextColumn Binding="{Binding Size}" Width="150" FontSize="16">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                    <Setter Property="HorizontalAlignment" Value="Right"/>
                                    <Setter Property="Foreground" Value="#007bff"/>
                                    <Setter Property="FontWeight" Value="Bold"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                    </DataGrid.Columns>
                </DataGrid>

                <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                    <Button x:Name="BtnCancel" Content="Cancelar" Width="100" Height="40" Margin="0,0,15,0" Click="BtnCancelar_Click">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="Foreground" Value="#8c8f9e"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" CornerRadius="8" BorderBrush="#33ffffff" BorderThickness="1">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>

                    <Button x:Name="BtnClean" Content="Limpar Agora" Width="150" Height="40" Click="BtnClean_Click">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="#3d52fc"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="FontWeight" Value="Bold"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border x:Name="bdr" Background="{TemplateBinding Background}" CornerRadius="8">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="bdr" Property="Background" Value="#5669fc"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>
            </Grid>

            <Grid x:Name="GridResult" Visibility="Collapsed">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Border Grid.Row="0" Width="80" Height="80" CornerRadius="40" Background="#3300ff88" HorizontalAlignment="Center" Margin="0,0,0,20">
                    <TextBlock Text="âœ”" Foreground="#00ff88" FontSize="40" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Border>

                <TextBlock x:Name="ResultTitle" Grid.Row="1" Text="Limpeza ConcluÃ­da!" FontSize="24" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center" Margin="0,0,0,30"/>

                <StackPanel Grid.Row="2" VerticalAlignment="Center" HorizontalAlignment="Center">
                    <TextBlock x:Name="TxtResultSpace" Text="0 MB Liberados" FontSize="32" Foreground="#007bff" FontWeight="Bold" HorizontalAlignment="Center"/>
                    <TextBlock x:Name="TxtResultFiles" Text="0 arquivos removidos" FontSize="16" Foreground="#8c8f9e" HorizontalAlignment="Center" Margin="0,5,0,0"/>
                </StackPanel>

                <Button x:Name="BtnCloseResult" Grid.Row="3" Content="IncrÃ­vel" Width="150" Height="45" HorizontalAlignment="Center" Margin="0,30,0,0" Click="BtnCancelar_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="#00b361"/>
                            <Setter Property="Foreground" Value="White"/>
                            <Setter Property="FontWeight" Value="Bold"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" CornerRadius="22">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>

        </Grid>
    </Border>
</Window>