<Application x:Class="EvoSystem.UI.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        
        <!-- ============================================================ -->
        <!-- 1. CORES E PINCÉIS (TEMA) -->
        <!-- ============================================================ -->
        <SolidColorBrush x:Key="CorFundoBase" Color="#10121a"/>
        <SolidColorBrush x:Key="CorFundoCard" Color="#25283d"/>
        <SolidColorBrush x:Key="CorTextoPrincipal" Color="#e0e0e0"/>
        <SolidColorBrush x:Key="CorTextoSecundario" Color="#8c8f9e"/>
        <SolidColorBrush x:Key="CorBorda" Color="#33ffffff"/>

        <!-- Gradiente de Fundo Principal -->
        <LinearGradientBrush x:Key="GradienteFundo" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#2a0a44" Offset="0.0"/>
            <GradientStop Color="#10121a" Offset="0.5"/>
            <GradientStop Color="#1a1f44" Offset="1.0"/>
        </LinearGradientBrush>

        <!-- Gradiente dos Botões de Ação -->
        <LinearGradientBrush x:Key="GradienteBotao" StartPoint="0,0.5" EndPoint="1,0.5">
            <GradientStop Color="#9e00e0" Offset="0.0"/>
            <GradientStop Color="#007bff" Offset="0.5"/>
            <GradientStop Color="#3d52fc" Offset="1.0"/>
        </LinearGradientBrush>

        <!-- ============================================================ -->
        <!-- 2. ESTILOS DE COMPONENTES (BOTÕES E CARDS) -->
        <!-- ============================================================ -->
        
        <!-- Estilo Botão Moderno -->
        <Style x:Key="BtnModerno" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource GradienteBotao}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Estilo Card (Borda com Sombra) -->
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource CorFundoCard}"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="0,0,20,20"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Black" BlurRadius="15" ShadowDepth="5" Opacity="0.3"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- ============================================================ -->
        <!-- 3. ESTILO GLOBAL DA BARRA DE ROLAGEM (SCROLLBAR) - NOVO -->
        <!-- ============================================================ -->
        
        <!-- Estilo da parte que arrasta (Thumb) -->
        <Style x:Key="ScrollBarThumb" TargetType="{x:Type Thumb}">
            <Setter Property="OverridesDefaultStyle" Value="true"/>
            <Setter Property="IsTabStop" Value="false"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Thumb}">
                        <!-- Cor padrão cinza azulado, vira azul neon no mouse over -->
                        <Border x:Name="rectangle"
                                Background="#4a4e6b"
                                CornerRadius="4"
                                Height="{TemplateBinding Height}"
                                SnapsToDevicePixels="True"
                                Width="{TemplateBinding Width}"/>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="true">
                                <Setter TargetName="rectangle" Property="Background" Value="#3d52fc"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Estilo da Barra Completa (Sem setas, fina e escura) -->
        <Style TargetType="{x:Type ScrollBar}">
            <Setter Property="Stylus.IsPressAndHoldEnabled" Value="false"/>
            <Setter Property="Stylus.IsFlicksEnabled" Value="false"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Margin" Value="0,0,2,0"/>
            <Setter Property="Width" Value="8"/>  <!-- Largura bem fina -->
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type ScrollBar}">
                        <Grid x:Name="Bg" SnapsToDevicePixels="true">
                            <Track x:Name="PART_Track" IsDirectionReversed="true" IsEnabled="{TemplateBinding IsEnabled}">
                                <Track.DecreaseRepeatButton>
                                    <RepeatButton Command="{x:Static ScrollBar.LineUpCommand}" Opacity="0" IsEnabled="False"/>
                                </Track.DecreaseRepeatButton>
                                <Track.IncreaseRepeatButton>
                                    <RepeatButton Command="{x:Static ScrollBar.LineDownCommand}" Opacity="0" IsEnabled="False"/>
                                </Track.IncreaseRepeatButton>
                                <Track.Thumb>
                                    <Thumb Style="{StaticResource ScrollBarThumb}"/>
                                </Track.Thumb>
                            </Track>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="Orientation" Value="Horizontal">
                    <Setter Property="Width" Value="Auto"/>
                    <Setter Property="MinWidth" Value="0"/>
                    <Setter Property="Height" Value="8"/> <!-- Altura bem fina -->
                </Trigger>
            </Style.Triggers>
        </Style>

    </Application.Resources>
</Application>