<Window x:Class="EvoSystem.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Evo-System" Height="700" Width="1100"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None" 
        AllowsTransparency="True"
        Background="Transparent"
        MouseDown="Window_MouseDown">

    <Border Background="{StaticResource GradienteFundo}" CornerRadius="15" BorderBrush="#33ffffff" BorderThickness="1">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="240"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" Background="#1a1c2a" Opacity="0.95" BorderBrush="#33ffffff" BorderThickness="0,0,1,0" CornerRadius="15,0,0,15">
                <StackPanel Margin="20">
                    <Image Source="/img/imgsemfundo.png" Height="50" Margin="0,10,0,40"/>

                    <StackPanel>
                        <Button x:Name="BtnMenuHome" Content="Verificar" Height="45" Background="Transparent" Foreground="White" BorderThickness="0" HorizontalContentAlignment="Left" Cursor="Hand" FontSize="15" Click="Nav_Home_Click"/>
                        <Button x:Name="BtnMenuUpdate" Content="Atualizar" Height="45" Background="Transparent" Foreground="#8c8f9e" BorderThickness="0" HorizontalContentAlignment="Left" Cursor="Hand" FontSize="15" Click="Nav_Atualizar_Click"/>
                        <Button x:Name="BtnMenuPerformance" Content="Desempenho" Height="45" Background="Transparent" Foreground="#8c8f9e" BorderThickness="0" HorizontalContentAlignment="Left" Cursor="Hand" FontSize="15" Click="Nav_Desempenho_Click"/>
                        <Button x:Name="BtnMenuOptions" Content="Opções" Height="45" Background="Transparent" Foreground="#8c8f9e" BorderThickness="0" HorizontalContentAlignment="Left" Cursor="Hand" FontSize="15" Margin="0,20,0,0" Click="Nav_Opcoes_Click"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <Grid Grid.Column="1" Margin="30">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0" Margin="0,0,0,20">
                    <TextBlock x:Name="PageTitle" Text="Painel Principal" FontSize="28" FontWeight="SemiBold" Foreground="White" VerticalAlignment="Center"/>
                    
                    <Button Content="✕" HorizontalAlignment="Right" VerticalAlignment="Top" 
                            Width="30" Height="30" FontSize="14"
                            Background="Transparent" Foreground="White" BorderThickness="0"
                            Cursor="Hand" Click="BtnFechar_Click">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" CornerRadius="5">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#ff4d4d"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </Grid>
                
                <ContentControl x:Name="MainContent" Grid.Row="1"/>
            </Grid>
        </Grid>
    </Border>
</Window>